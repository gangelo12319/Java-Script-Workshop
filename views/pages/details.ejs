<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header") %>
</head>
<body class="bg-gradient-to-b from-green-300 to-green-600 min-h-screen flex flex-col">
  <div class="container mx-auto p-5 flex-grow">
    
    <!-- Pokédex UI -->
    <div class="relative w-72 bg-red-600 rounded-lg p-4 mx-auto shadow-lg border-4 border-red-700">
        
        <!-- Pokédex Top Section -->
        <div class="flex justify-between items-center mb-3">
            <!-- Camera Light -->
            <div class="w-6 h-6 bg-blue-300 border-2 border-blue-500 rounded-full shadow-md"></div>
            <!-- Small Indicator Lights -->
            <div class="flex space-x-1">
                <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                <div class="w-2 h-2 bg-yellow-400 rounded-full"></div>
                <div class="w-2 h-2 bg-red-400 rounded-full"></div>
            </div>
        </div>

        <!-- Pokémon Screen -->
        <div class="bg-gray-100 rounded-lg p-2 shadow-md">
            <div class="bg-yellow-200 p-2 rounded-lg text-center">
                <img src="<%= pokemon.sprites.front_default %>" 
                    alt="<%= pokemon.name %>" class="mx-auto w-24 h-24">
            </div>
            <p class="text-center font-bold text-gray-700 mt-2">
                <%= pokemon.id %> - <%= pokemon.name %>
            </p>
        </div>

        <!-- Pokémon Details -->
        <div class="mt-3 text-center">
            <p class="text-lg font-semibold">Height: <%= pokemon.height %></p>
            <p class="text-lg font-semibold">Weight: <%= pokemon.weight %></p>
            <p class="text-lg font-semibold">Type: <%= pokemon.types.map(t => t.type.name).join(', ') %></p>
        </div>

        <!-- Navigation Buttons -->
        <div class="flex justify-between mt-3">
            <a href="/" class="bg-gray-800 text-white px-4 py-2 rounded-md shadow-md hover:bg-gray-900">
                Back
            </a>
        </div>
    </div>
  </div>

  <%- include("../partials/footer") %>
</body>
</html>
